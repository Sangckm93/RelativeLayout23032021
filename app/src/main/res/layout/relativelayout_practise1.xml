<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewBlue"
        android:textColor="@color/white"
        android:background="#2196F3"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:text="Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewGreen"
        android:layout_alignLeft="@+id/textViewBlue"
        android:layout_above="@+id/textViewBlue"
        android:textColor="@color/white"
        android:background="#4CAF50"
        android:textSize="30sp"
        android:text="Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewRed"
        android:layout_alignLeft="@+id/textViewBlue"
        android:layout_above="@+id/textViewGreen"
        android:textColor="@color/white"
        android:background="#FA0008"
        android:textSize="30sp"
        android:text="red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewOrange"
        android:layout_alignLeft="@+id/textViewBlue"
        android:layout_below="@+id/textViewBlue"
        android:textColor="@color/white"
        android:background="#FF5722"
        android:textSize="30sp"
        android:text="Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewGray"
        android:layout_alignLeft="@+id/textViewBlue"
        android:layout_below="@+id/textViewOrange"
        android:textColor="@color/white"
        android:background="#656160"
        android:textSize="30sp"
        android:text="Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewPink"
        android:layout_alignLeft="@+id/textViewBlue"
        android:layout_below="@+id/textViewGray"
        android:textColor="@color/white"
        android:background="#E91E63"
        android:textSize="30sp"
        android:text="Pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>